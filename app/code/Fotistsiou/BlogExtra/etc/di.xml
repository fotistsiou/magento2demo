<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Fotistsiou\Blog\Observer\LogPostDetailView">
        <plugin
            name="fotistsiou_blogextra_add_data_to_post_detail_observer"
            type="Fotistsiou\BlogExtra\Plugin\AddDataToPostDetailObserver"
        />
        <plugin
            name="fotistsiou_blogextra_prevent_post_detail_logger"
            type="Fotistsiou\BlogExtra\Plugin\PreventPostDetailLogger"
            disabled="true"
        />
    </type>
    <type name="Fotistsiou\Blog\Controller\Post\Detail">
        <plugin
            name="fotistsiou_blogextra_return_raw_page_response"
            type="Fotistsiou\BlogExtra\Plugin\AlternatePostDetailTemplate"
        />
    </type>
    <preference
        for="Fotistsiou\Blog\Controller\Post\Detail"
        type="Fotistsiou\BlogExtra\Controller\Post\Detail"
    />
</config>
